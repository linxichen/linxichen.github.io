{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jekyll Serve",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "bundle",
            "runtimeArgs": [
                "exec",
                "jekyll",
                "serve",
                "--watch",
                "--livereload",
                "--open-url"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
